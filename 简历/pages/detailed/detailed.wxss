/* pages/detailed/detailed.less */
image {
  width: 100%;
  height: 100%;
}
.big {
  width: 750rpx;
}
.big .image {
  width: 750rpx;
  height: 400rpx;
  border: 0rpx solid red;
}
.big .topTabSwiper {
  width: 750rpx;
  border: 0rpx solid red;
}
.big .swiper-tab {
  width: 750rpx;
  font-size: 35rpx;
  height: 88rpx;
  display: flex;
  font-weight: bold;
}
.big .swiper-tab .swiper-tab-item {
  color: #7c7c7c;
  flex: 4;
  margin: 20rpx 0 0 50rpx;
}
.big .swiper-tab .on {
  text-align: center;
  border-bottom: 4rpx solid #000;
}
.big .swiper-auto {
  width: 100%;
  height: 100%;
  position: fixed;
}
.big .swiper-auto .txt {
  color: #888888;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.big .swiper-auto .txt view {
  margin: 15rpx 0 0 40rpx;
}
.big .swiper-auto swiper-item {
  height: 100%;
}
